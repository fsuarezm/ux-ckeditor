{% block ckeditor_widget -%}
    {%- set dataController = (attr['data-controller']|default('') ~ ' fsuarezm--ux-ckeditor--ckeditor')|trim -%}

    {%- set attr = attr|merge({
        'data-controller': dataController,
        class: (attr.class|default('') ~ ' ckeditor-textarea')|trim,
        'data-fsm--ux-ckeditor--ckeditor-language': language,
        'data-fsm--ux-ckeditor--ckeditor-config': ckeditor_options,
    }) -%}

    {{ block('textarea_widget') }}
{%- endblock %}
